{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "env": {"bod":"build"}, 
            "shell": {
                 "executable": "pwsh.exe", 
                "args": [
                    "-c",
                    "\"& 'C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/Launch-VsDevShell.ps1'",
                    "&& cd ${cwd} ",
                    "&& "
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/std:c17",
                "/Fe:", "build\\",
                "/Fd:", "build\\",
                "/Fo:", "build\\", 
                "${file}", 
                "\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$msCompile",
            "detail": "Task generated by debuger"
        }
    ]
}